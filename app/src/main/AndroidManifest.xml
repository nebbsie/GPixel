<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluecrabstudios.gpixel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.menu.menu_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.play.select_car_activity" />
        <activity android:name=".activities.account.account_activity" />
        <activity android:name=".activities.account.view_scores" />
        <activity
            android:name=".social_activity"
            android:windowSoftInputMode="adjustPan" />

    </application>

</manifest>